package xor_subsequence;

import java.util.Scanner;
import java.math.BigInteger;  




public class Solution {


	public void print(int start, int seq){
		
		int pos = 0;
		for(int i=start; i<start+seq; i++){
			
			System.out.print(a[pos]]);
			
		}
		System.out.println();
		
	}
	
	public static void main(String[] args) {
		
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
	
		
		int[] a = new int[n];
		
		for (int t = 0; t<n; t++){
		
			
			int k = sc.nextInt();
			a[t] = k;
			
		
		}
		
		
		
		for (int i=0; i<n; i++){
			
			
			for (int j=i+1; j<n-i; j++){
				
				for (int m=i; m<i+j; m++)
				
				System.out.print(m+":");
				
				
			}
			System.out.println();
			
			
		}
		
		
		
		for (int i=0; i<n; i++){
			
			System.out.println(a[i]);
		}
		
		
	}

}
