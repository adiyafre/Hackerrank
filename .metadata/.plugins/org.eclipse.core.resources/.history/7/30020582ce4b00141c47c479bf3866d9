package almost_Sorted;

import java.util.Scanner;


public class Solution {



	
	public static void main(String[] args) {
		
		

		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();

		int[] a = new int[n];

		
		for (int t = 0; t<n; t++){
		
			
			a[t] = sc.nextInt();


			
		
		}
		
		int max = 0; 
		int start = -1;
		int end = 0;
		boolean fail = true;
		int countSwap = 0;
		int countReverse = 0;
		int endIndexReverse = -1;
		int endIndexSwap = -1;
		
		for (int i = 0; i<n-1&&fail; i++){
			
			if (a[i]>a[i+1]){
				
				endIndexReverse=checkReverse(i);
				endIndexSwap=checkSwap(i);
				
				
				if (endIndexSwap>-1) countSwap++;
				if (endIndexReverse>-1) countReverse++;
				
				
			}
			
			
			if(countSwap>2)fail=false;
			if(countReverse>1)fail=false;
			
		}	
			
		
	}
		
		public static int checkReverse(int idx){
			return -1;
			
		}
		
		public static int checkSwap(int idx){
			return -1;
			
		}
		

}
